    <phrase role="product">Smart Docs</phrase>
    <phrase role="assignee">assignee@suse.com</phrase>
   </meta>
   <meta name="translation">
    <phrase role="trans">yes or no</phrase>
    <phrase role="language">comma-separated list of languages, for example de-de,cs-cz</phrase>
