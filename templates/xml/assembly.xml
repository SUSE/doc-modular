<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<?xml-model href="http://docbook.org/xml/5.2/rng/assembly.rng" schematypens="http://relaxng.org/ns/structure/1.0"?>
<?xml-model href="http://docbook.org/xml/5.2/sch/assembly.sch" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>

<!DOCTYPE assembly
[
  <!ENTITY % entities SYSTEM "../common/entity-decl.ent">
    %entities;
]>
<assembly version="5.2" xml:lang="en"
          xmlns:xlink="http://www.w3.org/1999/xlink"
          xmlns:trans="http://docbook.org/ns/transclusion"
          xmlns="http://docbook.org/ns/docbook">
 <!-- resources section references all topic chunks used in the final article -->
 <resources>
  <resource href="" xml:id="">
   <description><!-- optional description that is not displayed in the final version --></description>
  </resource>
  <resource href="../common/legal.xml" xml:id="legal">
   <description>Legal Notice</description>
  </resource>
  <resource href="../common/licenses.xml" xml:id="gnu-licenses">
   <description>GNU Licenses</description>
  </resource>
  <resource href="../common/gfdl.xml" xml:id="gfdl">
   <description>GNU Free Documentation License</description>
  </resource>
 </resources>

 <!-- This section determines the order and hierarchy of included topics -->
 <structure>
  <output renderas="article"/>
  <merge>
   <!-- Character limit for SEO purposes is 55 characters -->
   <title>Your title</title>
   <!-- <subtitle/> --><!-- possible subtitle -->
 
  <info>
   <!-- can we try to use the same date format here as in other docs? how can we use the    
   <date>
    <?dbtimestamp format="B d, Y"?>
   </date> format here? -->
   <pubdate><!-- enter the original publishing date --></pubdate>
   <meta name="updated" content="enter ISO date of last update as YYYY-MM-DD"/>
   <meta name="time-to-read" content="enter time to read in minutes"/>
   <meta name="bugtracker">
    <phrase role="url">https://bugzilla.suse.com/enter_bug.cgi</phrase>
    <phrase role="component">Non-product-specific documentation</phrase>
    <phrase role="product">Smart Docs</phrase>
    <phrase role="assignee">assignee@suse.com</phrase>
   </meta>
   <meta name="translation">
    <phrase role="trans"><!-- add yes or no --></phrase>
    <phrase role="language"><!-- comma-separated list of languages, for example en-us,de-de,cs-cz --></phrase>
   </meta>
   <meta name="refers-to" content="enter id of parent chapter or article"/>  
   <meta name="architecture" content=""/>
   <meta name="productname">
    <productname version="enter version number or SP"><!-- enter product entity --></productname>
   </meta>
   <meta name="title"><!-- short title for SEO and social media, max. 55 chars --></meta>
   <meta name="description"><!-- short description, max. 150 chars --></meta>
   <meta name="social-descr"><!-- ultra short description for social media, max 55 chars --></meta>
   <meta name="targetgroup" content=""/>
   <meta name="function" content=""/>
   <meta name="task" content=""/>
   <meta name="category" content=""/>
  </info>


   <abstract>
    <para>
     Provide a short intro to your article here.
    </para>
    <variablelist>
     <varlistentry>
      <term>WHAT?</term>
      <listitem>
       <para>
        <!-- Ultra-short description -->
       </para>
      </listitem>
     </varlistentry>
     <varlistentry>
      <term>WHY?</term>
      <listitem>
       <para>
        <!-- Why should anyone read this? -->
       </para>
      </listitem>
     </varlistentry>
     <varlistentry>
      <term>EFFORT?</term>
      <listitem>
       <para>
        <!-- What does it "cost" to read and grasp the topic of this article?  -->
       </para>
      </listitem>
     </varlistentry>
     <varlistentry>
      <term>GOAL!</term>
      <listitem>
       <para>
        <!-- What will the reader take away from this article -->
       </para>
      </listitem>
     </varlistentry>
    </variablelist>

    <itemizedlist>
     <title>Requirements</title>
     <listitem>
      <para>
      </para>
     </listitem>
     <listitem>
      <para>
      </para>
     </listitem>
    </itemizedlist>
   </abstract>
  </merge>
  <!-- pull in all the topic files you need -->
  <!-- pick the appropriate type of include to match your needs -->
  <!-- pull in a topic as is -->
  <module resourceref="id of your topic defined in resource element above"/>
   <output renderas="section"/>
  </module>
  <!-- pull in a topic and switch the title -->
  <module resourceref="id of your topic defined in resource element above">
   <output renderas="section"/>
   <merge>
    <title><!-- enter the new title --></title>
   </merge>
  </module>
  <!-- omit title and root element and just pull the content below --> 
  <module resourceref="id of your topic defined in resource element above" omittitle="yes">
  </module>
  <module resourceref="legal"/>
  <!-- pull in one module and nest another module that appears as a child -->
  <module resourceref="gnu-licenses">
   <output renderas="appendix"/>
   <module resourceref="gfdl"/>
  </module>
 </structure>

 <!-- links between articles don't work yet, use final web links in the mean time -->
 <section xml:id="more-info">
  <title>For more information</title>
  <para>
   Add web links to external sources or other SUSE articles. 
  </para>
 </section>
 <section xml:id="whats-next">
  <title>What's next?</title>
  <para>
   Add list of web links to articles relating to this topic that the user might need.
  </para>
 </section>
 
 
