<!DOCTYPE assembly
[
    <!ENTITY % entities SYSTEM "generic-entities.ent">
    %entities;
]>
<!-- refers to legacy doc: <add github link to legacy doc piece, if applicable> -->
<!-- point back to this document with a similar comment added to your legacy doc piece -->
<!-- refer to README.md for file and id naming conventions -->
<assembly version="5.2" xml:lang="en"
          xmlns:xlink="http://www.w3.org/1999/xlink"
          xmlns:trans="http://docbook.org/ns/transclusion"
          xmlns="http://docbook.org/ns/docbook">
<!-- resources section references all topic chunks used in the final article -->
<!-- remove comment once your file resides in its proper place. 
  <resources>
    <description>Common resources</description>
    <resource href="../common/license_gfdl1.2.xml" xml:id="gfdl">
      <description>GNU Free Documentation License</description>
    </resource>
  </resources>
 -->
  <!-- R E S O U R C E S -->
  <resources>
    <description>Glue files</description>
    <resource xml:id="_glue-intro" href="glue-intro.xml"/>
    <resource xml:id="_glue-example" href="glue.xml"/>
    <resource xml:id="_glue-more-info" href="glue-more-info.xml"/>
    <resource xml:id="_glue-whats-next" href="glue-whats-next.xml"/>
  </resources>
  <resources>
    <description>Concepts</description>
    <resource xml:id="_concept-example" href="concept.xml"/>
  </resources>
  <resources>
    <description>Tasks</description>
    <resource xml:id="_task-example" href="task.xml"/>
  </resources>
  <resources>
    <description>References</description>
    <resource xml:id="_reference-example" href="reference.xml"/>
  </resources>
  
  <!-- S T R U C T U R E -->
 <structure renderas="article" xml:id="article-example">
  <merge>
   <title>Your title, limit to 55 characters, if possible</title>
   <subtitle>Subtitle if necessary</subtitle>
   <!-- TODO: provide a listing of possible and validatable meta entry values. Maybe in our geekodoc repo? -->
   <!-- ISO date of last update as YYYY-MM-DD -->
   <meta name="updated" content="2023-11-11"/>
   <!-- time to read in minutes -->
   <meta name="time-to-read" content="42"/>
   <meta name="bugtracker">
    <phrase role="url">https://bugzilla.suse.com/enter_bug.cgi</phrase>
    <phrase role="component">Non-product-specific documentation</phrase>
    <phrase role="product">Smart Docs</phrase>
    <phrase role="assignee">assignee@suse.com</phrase>
   </meta>
   <meta name="translation">
    <!-- enter yes or no for translation -->
    <phrase role="trans">yes</phrase>
    <!-- enter languages: ar-ar, cs-cz, ... -->
    <phrase role="language">comma-separated list of languages, for example de-de,cs-cz</phrase>
   </meta>
   <!-- enter the xml:id of the section or documentation piece your article is based on -->
   <meta name="refers-to" content="alt-root"/>
   <!-- enter the platform identifier or list of comma separated list of identifiers -->
   <meta name="architecture" content="x86"/>
   <meta name="productname">
    <!-- enter product name and version -->
    <productname version="15-SP5">&sles;</productname>
   </meta>
   <meta name="title">short title for SEO and social media, max. 55 chars</meta>
   <meta name="description">short description, max. 150 chars</meta>
   <meta name="social-descr">ultra short description for social media, max 55 chars</meta>
   <!-- enter the desired target group --> 
   <meta name="targetgroup" content="End user"/>
   <!-- enter the desired function of your doc piece --> 
   <meta name="function" content="Getting started"/>
   <!-- enter the task your piece is related to -->
   <meta name="task" content="User management"/>
   <!-- pick a category your piece belongs to -->
   <meta name="category" content="Systems management"/>

   <abstract>
    <para>
     Provide a short intro to your article here.
    </para>
   </abstract>
  </merge>

   <module resourceref="_glue-intro" contentonly="true" omittitles="true"/>

  <!-- pull in all the topic files you need -->
  <!-- pick the appropriate type of include to match your needs -->
  <!-- pull in a topic as is -->
  <module resourceref="_glue-example" renderas="section"/>
  <!-- pull in a topic and switch the title -->
  <module resourceref="_concept-example" renderas="section">
   <merge>
    <title>You are a very special concept now!</title>
   </merge>
  </module>
  <module resourceref="_task-example" renderas="section"/>
  <module resourceref="_reference-example" renderas="section"/>
  <module resourceref="_glue-more-info" renderas="section"/>
  <module resourceref="_glue-whats-next" renderas="section"/>
  <!-- pull in one module and nest another module that appears as a child
  <module resourceref="_my_envelope" renderas="section">
   <module resourceref="_gfdl" renderas="section"/>
  </module> 
  -->
  </structure>
</assembly>
